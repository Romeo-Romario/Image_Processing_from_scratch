{
  "version": "0.2.0",
  "configurations": [
    // ------------------------------------------------
    // OPTION 1: C++ Build and Debug
    // Select this when you want to run your C++ .exe
    // ------------------------------------------------
    {
      "name": "C++: Build and Debug Active File",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "console": "externalTerminal",
      "preLaunchTask": "C/C++: cl.exe build active file"
    },
    // ------------------------------------------------
    // OPTION 2: Python
    // Select this when you want to run your Python script
    // ------------------------------------------------
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
